{
  "metadata": [
    {
      "src": ["src/**/*.csproj"],
      "dest": "api",
      "disableDefaultFilter": true
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Authentica",
      "_appTitle": "Authentica",
      "_enableSearch": true,
      "pdf": true
    }
  }
}
